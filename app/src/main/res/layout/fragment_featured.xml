<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context=".MainActivity">

    <!-- Title "Featured" -->
    <TextView
        android:id="@+id/textViewFeaturedTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Featured"
        android:textSize="34sp"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GridLayout for Category Buttons -->
    <GridLayout
        android:id="@+id/gridLayoutCategories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_marginHorizontal="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:horizontalSpacing="16dp"
        android:verticalSpacing="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewFeaturedTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <!-- Trending Button -->
        <Button
            android:id="@+id/btnTrending"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button_blue"
            android:drawableTop="@drawable/ic_trending"
            android:gravity="center_horizontal|bottom"
            android:lineSpacingExtra="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Trending"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Local Button -->
        <Button
            android:id="@+id/btnLocal"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button_blue"
            android:drawableTop="@drawable/ic_local"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Local"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Weather Button -->
        <Button
            android:id="@+id/btnWeather"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button_blue"
            android:drawableTop="@drawable/ic_weather"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Weather"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Business Button -->
        <Button
            android:id="@+id/btnBusiness"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button_blue"
            android:drawableTop="@drawable/ic_business"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Business"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Technology Button -->
        <Button
            android:id="@+id/btnTechnology"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button_blue"
            android:drawableTop="@drawable/ic_tech"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Technology"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Social Button -->
        <Button
            android:id="@+id/btnSocial"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button_blue"
            android:drawableTop="@drawable/ic_social"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Social"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Sports Button -->
        <Button
            android:id="@+id/btnSports"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button_blue"
            android:drawableTop="@drawable/ic_sport"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Sports"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Health Button -->
        <Button
            android:id="@+id/btnHealth"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button_blue"
            android:drawableTop="@drawable/ic_health"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Health"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </GridLayout>

    <!-- Liked Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLiked"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:contentPadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/gridLayoutCategories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Liked Icon"
                android:src="@drawable/ic_heart"
                app:tint="@color/colorOnBackground" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Liked"
                android:textSize="20sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_right_arrow"
                android:contentDescription="Arrow Right"
                app:tint="#666666" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
