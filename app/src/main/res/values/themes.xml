<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JustinNews" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Backgrounds and surfaces -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <!--        <item name="colorBackground">@color/colorBackground</item>-->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnBackground</item>

        <!-- Typography -->
        <item name="fontFamily">@font/inter</item>
        <item name="android:fontFamily">@font/inter</item>

        <!-- Elevation overlays (Material 2) -->
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>

        <!-- Input and button styling -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.JustinNews.BottomNavigation</item>

        <!-- App bar / toolbar -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="Theme.JustinNews" parent="Base.Theme.JustinNews" />

    <style name="Widget.JustinNews.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
    </style>

    <style name="ShapeAppearance.App.RoundedCorners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item> </style>

    <style name="Widget.App.TextInputLayout.FilledBox.Rounded" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item> <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.RoundedCorners</item>
    </style>

</resources>